<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.example.bloothcontroler.ui.dashboard.DashboardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llPvstatus">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/shape_item_title_bg"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Items"
                            android:textColor="@color/base_blue"
                            android:textSize="14sp"
                            android:paddingStart="15dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Value"
                            android:textColor="@color/base_blue"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Pmax(W)"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <EditText
                            android:id="@+id/edPamx"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                       >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Vmp(V)"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <EditText
                            android:id="@+id/edVmp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Imp(A)"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <EditText
                            android:id="@+id/edImp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Voc(V)"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <EditText
                            android:id="@+id/edVoc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Isc(A)"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <EditText
                            android:id="@+id/edIsc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="2"
                            android:text="Type"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp_1"
                            android:gravity="center"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:text="@{model.mType,default = Poly}"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="2"
                            android:text="Glass"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <TextView
                            android:id="@+id/tvGlass"
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp_1"
                            android:gravity="center"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:text="@{model.mGlass,default = Single}"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Cells(PCS)"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <EditText
                            android:id="@+id/edCells"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Years(y)"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <EditText
                            android:id="@+id/edYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Moduls/String(PCS)"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:paddingStart="20dp"
                            android:background="@drawable/shape_tab_tv_bg"/>

                        <EditText
                            android:id="@+id/edModuls"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:textColor="@color/base_black"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:background="@drawable/shape_tab_tv_bg_bottom"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/refresh"
                    android:background="@drawable/selector_img_btn_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llStatus" />

                <ImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/write"
                    android:background="@drawable/selector_img_btn_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llStatus" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>